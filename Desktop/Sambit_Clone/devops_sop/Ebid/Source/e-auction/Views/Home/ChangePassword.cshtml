@model e_auction.Models.LoginMaster

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-validate">
        @Html.ValidationSummary()
        <h2>Change Password</h2>
        <div class="control-group">

            <div class="span4">
                <label>Current Password</label>

            </div>
            <div class="span8">
                <input type="password" name="currentpass" />
                @Html.ValidationMessageFor(model => model.clientpassword)
            </div>
        </div>
        <div class="control-group">
            <div class="span4">
                <label>New Password</label>
            </div>
            <div class="span8">
                <input type="password" name="newpass" />
                @Html.ValidationMessageFor(model => model.clientpassword)
            </div>
        </div>
        <div class="control-group">
            <div class="span4">
                <label>Repeat Password</label>
            </div>
            <div class="span8">
                <input type="password" name="repeatpass" />
                @Html.ValidationMessageFor(model => model.clientpassword)
            </div>
        </div>
        <div class="submit" style="padding-bottom:10px;">
            <input type="submit" id="Login" value="Change Password" class="btn btn-darkblue centerHere" />
        </div>

    </div>
}



