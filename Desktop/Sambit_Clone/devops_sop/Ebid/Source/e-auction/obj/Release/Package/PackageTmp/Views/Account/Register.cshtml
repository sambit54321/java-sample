@model e_auction.Models.RegisterMaster

@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;


@{
    ViewBag.Title = "Register";
}
<script src="~/Content/js/jquery-1.8.2.js"></script>
<script src="~/Content/js/jquery-ui.min.js"></script>
@*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@
<script type="text/javascript">
    $(document).ready(function () {
        
        $("#CompanyName").attr('data-rule-required', 'true');
        $("#RegAddress").attr('data-rule-required', 'true');
        $("#City").attr('data-rule-required', 'true');
        $("#StateId").attr('data-rule-required', 'true');
        $("#pincode").attr('data-rule-required', 'true');
        $("#pincode").attr('data-rule-number', 'true');
        $("#PanNo").attr('data-rule-required', 'true');
        $("#ContactPerson").attr('data-rule-required', 'true');
        $("#Email").attr('data-rule-required', 'true');
        $("#Email").attr('data-rule-email', 'true');
        $("#Mobile").attr('data-rule-required', 'true');
        $("#Mobile").attr('data-rule-number', 'true');
        $("#Mobile").attr('data-rule-minlength', '10');
    });
</script>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal form-validate">
        <h2 class="center">Register with us</h2>

        @Html.ValidationSummary(true)
        <div class="row -fluid">
            <div class="span12">
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            Category
                        </div>
                        <div  class="span8">
                            @Html.DropDownListFor(model => model.CategoryId, (IEnumerable<SelectListItem>)ViewBag.CategoryListbag, "--Select--")
                            @Html.ValidationMessageFor(m=>m.CategoryId)
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            <label>Company Name</label>
                        </div>
                        <div class="span8">
                            @Html.EditorFor(model => model.CompanyName)
                            @Html.ValidationMessageFor(model => model.CompanyName)
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            <label >Register Address</label>
                        </div>
                        <div class="span8">
                            @Html.TextAreaFor(m=>m.RegAddress)
                            @Html.ValidationMessageFor(m=>m.RegAddress)
                            
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            @Html.LabelFor(model => model.City, new { @class = "control-label col-md-2" })
                        </div>
                        <div class="span8">
                            @Html.EditorFor(model => model.City)
                            @Html.ValidationMessageFor(model => model.City)
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            <label>State</label>
                        </div>
                        <div class="span8">
                            @Html.DropDownListFor(model=>model.StateId, (IEnumerable<SelectListItem>)ViewBag.StateListbag, "--Select--")
                            @Html.ValidationMessageFor(m=>m.StateId)
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            @Html.LabelFor(model => model.pincode, new { @class = "control-label col-md-2" })
                            
                        </div>
                        <div class="span8">
                            @Html.EditorFor(model => model.pincode)
                            @Html.ValidationMessageFor(model => model.pincode)
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            @Html.LabelFor(model => model.PanNo, new { @class = "control-label col-md-2" })
                        </div>  
                        <div class="span8">
                            @Html.EditorFor(model => model.PanNo)
                            @Html.ValidationMessageFor(model => model.PanNo)
                        </div>
                    </div>
                </div>
            </div>
            <div class="span12">
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            <label>Contact Person</label>
                        </div>
                        <div class="span8">
                            @Html.EditorFor(model => model.ContactPerson)
                            @Html.ValidationMessageFor(model => model.ContactPerson)
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                        </div>
                        <div class="span8">
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            @Html.LabelFor(model => model.Mobile, new { @class = "control-label col-md-2" })
                        </div>
                        <div class="span8">
                            @Html.EditorFor(model => model.Mobile)
                            @Html.ValidationMessageFor(model => model.Mobile)
                        </div>
                    </div>
                </div>

                @*<div class="control-group">
                    <div class="row-fluid">
                        <div class="span4">
                            @Html.LabelFor(model => model.Telephone, new { @class = "control-label col-md-2" })
                        </div>
                        <div class="span8">
                            @Html.EditorFor(model => model.Telephone)
                            @Html.ValidationMessageFor(model => model.Telephone)
                        </div>
                    </div>
                </div>*@
                
                
                <div class="control-group">
                    <div class="row-fluid">
                        <div class="span8 offset4">
                            @Html.MathCaptcha()
                            @*@Html.Captcha(3)*@
                            <br />
                            <p class="Error">  @ViewBag.ErrMessage </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
                <div class="check-line">
                    <input type="checkbox" id="c17" class='icheck-me' data-skin="flat" data-color="red" checked> <label class='inline' for="c17">I Agreed Terms & Conditions</label>
                </div>
        </div>
            <div class="submit">
                <div class="row-fluid">
                    <input id="submit" type="submit" value="Register" class="btn btn-darkblue"/>
                </div>
            </div>
        </div>
    
}

