@model e_auction.Models.TenderItem

@{
    ViewBag.Title = "Add Items";
    Layout = "~/Views/Shared/Master.cshtml";
}

@using (Html.BeginForm("Edit","TenderItem",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

<script src="~/content/js/jquery.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        
        $("#ItemType").attr('data-rule-required', 'true');
        $("#ItemName").attr('data-rule-required', 'true');
        $("#ItemDesc").attr('data-rule-required', 'true');
        $("#ItemCategory").attr('data-rule-required', 'true');
        $("#Location").attr('data-rule-required', 'true');
        $("#Quantity").attr('data-rule-required', 'true');
        $("#UOM").attr('data-rule-required', 'true');
        $("#Price").attr('data-rule-required', 'true');
        $("#Currency").attr('data-rule-required', 'true');
        $("#ReducePerBid").attr('data-rule-required', 'true');
        $("#ReducePerBid").attr('data-rule-number', 'true');
        $("#Remarks").attr('data-rule-required', 'true');
    });
</script>
    <div class="container-fluid">
        <form></form> @*Pls Do not Delete*@

        <div class="row-fluid">

            <div class="box box-color box-bordered">
                <div class="box-title">
                    <h3>
                        <i class="icon-magic"></i>
                        ADD TENDER
                    </h3>
                </div>
                <div class="box-content nopadding">
                    <div class='form-horizontal form-wizard' id="ss">
                        <div class="step" id="secondStep">
                            <ul class="wizard-steps steps-3">
                                <li>
                                    <div class="single-step">
                                        <span class="title">1</span>
                                        <span class="circle">
                                        </span>
                                        <span class="description">
                                            Tender information
                                        </span>
                                    </div>
                                </li>
                                <li class='active'>
                                    <div class="single-step">
                                        <span class="title">
                                            2
                                        </span>
                                        <span class="circle">
                                            <span class="active"></span>
                                        </span>
                                        <span class="description">
                                            Add Items
                                        </span>
                                    </div>
                                </li>
                                <li>
                                    <div class="single-step">
                                        <span class="title">
                                            3
                                        </span>
                                        <span class="circle">
                                        </span>
                                        <span class="description">
                                            Add Suppliers
                                        </span>
                                    </div>
                                </li>
                            </ul>
                            <div class="container-fluid">

                            </div>
                            <div class="span12">
                                <div class="span6">
                                    <div class="control-group">

                                        <label class="control-label">Item Type</label>
                                        <div class="controls">
                                            @Html.DropDownListFor(m => m.ItemType, (IEnumerable<SelectListItem>)ViewBag.ItemTypebag, "--Select--", new { @class = "select2-me input-xlarge" })
                                            @Html.ValidationMessageFor(m => m.ItemType)
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Item Name</label>
                                        <div class="controls">
                                            @Html.TextBoxFor(m => m.ItemName, new { @class = "input-xlarge" })
                                            @Html.ValidationMessageFor(m => m.ItemName)
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Item Description</label>
                                        <div class="controls">
                                            @Html.TextAreaFor(m => m.ItemDesc, new { @class = "input-xlarge" })
                                            @Html.ValidationMessageFor(m => m.ItemDesc)

                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Category</label>
                                        <div class="controls">
                                            @Html.DropDownListFor(m => m.ItemCategory, (IEnumerable<SelectListItem>)ViewBag.ItemCategorybag, "--Select--", new { @class = "select2-me input-xlarge" })
                                            @Html.ValidationMessageFor(m => m.ItemCategory)
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Location</label>
                                        <div class="controls">
                                            @Html.TextBoxFor(m => m.Location, new { @class = "input-xlarge" })
                                            @Html.ValidationMessageFor(m => m.Location)
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Quantity</label>
                                        <div class="controls">
                                            <div class="span12">
                                                <div class="span6">
                                                    @Html.EditorFor(m => m.Quantity, new { @class = "input-large" })
                                                    @Html.ValidationMessageFor(m => m.Quantity)
                                                </div>
                                                <div class="span6">
                                                    <div class="input-small">
                                                        @Html.DropDownListFor(m => m.UOM, (IEnumerable<SelectListItem>)ViewBag.UOMbag, "--Select--", new { @class = "chosen-select" })
                                                        @Html.ValidationMessageFor(m => m.UOM)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Price Per Unit</label>
                                        <div class="controls">
                                            <div class="span12">
                                                <div class="span6">
                                                    @Html.EditorFor(m => m.Price, new { @class = "input-xlarge" })
                                                    @Html.ValidationMessageFor(m => m.Price)
                                                </div>
                                                <div class="span6">
                                                    <div class="input-small">
                                                        @Html.DropDownListFor(m => m.Currency, (IEnumerable<SelectListItem>)ViewBag.Currencybag, "--Select--", new { @class = "chosen-select" })
                                                        @Html.ValidationMessageFor(m => m.Currency)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Floor Price</label>
                                        <div class="controls">

                                            @Html.ValidationMessageFor(m => m.Price)
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Price Reduction Method</label>
                                        <div class="controls">
                                            <div class="check-line">

                                                @foreach (var a in (IEnumerable<SelectListItem>)ViewBag.BidMethodbag)
                                                {
                                                    <div class="check-line">
                                                        @Html.RadioButtonFor(m => m.BidMethod, a.Value, new { })
                                                        <label class="inline">@a.Text</label>
                                                    </div>
                                                }
                                                @Html.ValidationMessageFor(m => m.BidMethod)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Price Reduce Per Bid</label>
                                        <div class="controls">
                                            @Html.EditorFor(m => m.ReducePerBid, new { @class = "input-xlarge" })
                                            @Html.ValidationMessageFor(m => m.ReducePerBid)
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Remarks</label>
                                        <div class="controls">
                                            @Html.TextBoxFor(m => m.Remarks, new { @class = "input-xlarge" })
                                            @Html.ValidationMessageFor(m => m.Remarks)
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <div class="controls">
                                            <input type="submit" name="Add Item" id="Additem" class="btn btn-primary" />
                                            <a href="@Url.Action("AddItems", "Tenderitem", new { @tenderid=@Request.QueryString["tenderid"] })" class="btn" rel="tooltip" title="Cancel" >Cancel</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="container-fluid">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="box">
                                            <div class="box-title">
                                                <h3>
                                                    Item Details
                                                </h3>
                                            </div>
                                            <div class="box-content nopadding">
                                                <table class="table table-hover table-nomargin table-bordered">
                                                    <thead>

                                                        <tr>

                                                            <th>S.No</th>
                                                            <th>Item Name</th>
                                                            <th class='hidden-350'>Item Description</th>
                                                            <th class='hsidden-1024'>Quantity</th>
                                                            <th class='hidden-480'>UOM</th>
                                                            <th class='hidden-480'>Price Per Unit</th>
                                                            <th class='hidden-480'>Total Price</th>
                                                            <th class='hidden-480'>Price Reduce/Bid</th>
                                                            <th>Options</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @foreach (var item in ViewBag.itemlist)
                                                        {
                                                            <tr>
                                                                <td>@item.srno</td>

                                                                <td>@item.ItemName</td>
                                                                <td>@item.ItemDesc</td>
                                                                <td>@item.Quantity</td>
                                                                <td>@item.UOM</td>
                                                                <td>@item.Price</td>
                                                                <td>@item.FloorPrice</td>
                                                                <td>@item.ReducePerBid</td>
                                                                <td>
                                                                    <a href="@Url.Action("Edit", "Tenderitem", new { @itemid=@item.itemid,@tenderid=@Request.QueryString["tenderid"] })" class="btn" rel="tooltip" title="View"><i class="icon-edit"></i></a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="form-actions">
                            <input type="reset" class="btn" value="Back" id="back" name="back">
                            <input type="button" name="next" class="btn btn-primary" value="Next" onclick="location.href = '@Url.Action("next", "TenderItem", new { tenderid=Request.QueryString["tenderid"] })'">
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<link href="~/Content/css/jquery-ui.structure.min.css" rel="stylesheet" />
<link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/css/jquery-ui.theme.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery-ui.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
