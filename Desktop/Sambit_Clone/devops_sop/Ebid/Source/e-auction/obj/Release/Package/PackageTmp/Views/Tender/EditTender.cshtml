@model e_auction.Models.Tender

@{
    ViewBag.Title = "Edit Tender";
    Layout = "~/Views/Shared/Master.cshtml";
}




@using (Html.BeginForm("EditTender", "Tender", FormMethod.Post, new { enctype = "multipart/form-data",tenderid=Request.QueryString["tenderid"],itemid=Request.QueryString["itemid"] }))
{
    @Html.AntiForgeryToken()
    <script type="text/javascript">
    $(document).ready(function () {
        
        $("#TenderDesc").attr('data-rule-required', 'true');
        $("#StartDate").attr('data-rule-required', 'true');
        $("#StartTime").attr('data-rule-required', 'true');
        $("#TimePeriod").attr('data-rule-required', 'true');
        $("#Company").attr('data-rule-required', 'true');
    });
</script>


    @Html.ValidationSummary(true)
    
    <div class="container-fluid">
        <form></form> @*Pls Do not Delete*@

        <div class="row-fluid">

            <div class="box box-color box-bordered">
                <div class="box-title">
                    <h3>
                        <i class="icon-magic"></i>
                        ADD TENDER
                    </h3>
                </div>
                <div class="box-content nopadding">
                    <div class='form-horizontal form-wizard' id="ss">
                        <div class="step" id="firstStep">
                            <ul class="wizard-steps steps-3">
                                <li class='active'>
                                    <div class="single-step">
                                        <span class="title">1</span>
                                        <span class="circle">
                                            <span class="active"></span>
                                        </span>
                                        <span class="description">
                                            Tender information
                                        </span>
                                    </div>
                                </li>
                                <li>
                                    <div class="single-step">
                                        <span class="title">2</span>
                                        <span class="circle">
                                        </span>
                                        <span class="description">
                                            Add Items
                                        </span>
                                    </div>
                                </li>
                                <li>
                                    <div class="single-step">
                                        <span class="title">3</span>
                                        <span class="circle">
                                        </span>
                                        <span class="description">
                                            Add Suppliers
                                        </span>
                                    </div>
                                </li>
                            </ul>
                            <div class="control-group">
                                <label for="firstname" class="control-label">Tender ID</label>
                                <div class="controls">
                                    <label id="tenderlabel">@securityUtil.Decode(Request.QueryString["tenderid"])</label>

                                </div>
                            </div>
                            <div class="control-group">
                                <label for="firstname" class="control-label">Description</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.TenderDesc, new { @class = "input-xlarge" })
                                    @Html.HiddenFor(m=>m.TenderId)
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="additionalfield" class="control-label">Start Date</label>
                                <div class="controls">
                                    <script>
                                        $(document).ready(
                                        function () {
                                            $('.StartDate').datepicker({
                                                startDate: '-0d',
                                                autoclose: true
                                            });
                                        });


                                    </script>
                                    @Html.TextBoxFor(m => m.StartDate, new { @class = "input-xlarge input-medium datepick StartDate", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(m=>m.StartDate)
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="additionalfield" class="control-label">Start Time</label>
                                <div class="controls">
                                    <div class="bootstrap-timepicker">
                                        @Html.TextBoxFor(m => m.StartTime, new { @class = "input-xlarge input-large timepick" })

                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="text" class="control-label">Time Period</label>
                                <div class="controls">
                                    @Html.DropDownListFor(m => m.TimePeriod, (IEnumerable<SelectListItem>)ViewBag.MinList, "--Select--", new { @class = "select2-me" })
                                    @Html.ValidationMessageFor(m=>m.TimePeriod)
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="text" class="control-label">Company</label>
                                <div class="controls">
                                    @Html.DropDownListFor(m => m.Company, (IEnumerable<SelectListItem>)ViewBag.CompanyList, "--Select--", new { @class = "select2-me input-xlarge" })
                                    @Html.ValidationMessageFor(m=>m.Company)
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="text" class="control-label">WF No</label>
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.WF_No, new { @class = "input-xlarge input-medium " })
                                    @Html.ValidationMessageFor(m => m.WF_No)
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="anotherelem" class="control-label">Attachment</label>
                                <div class="controls">
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="input-append ">
                                            <div class="uneditable-input  input-xlarge">
                                                <i class="icon-file fileupload-exists">
                                                </i>

                                                <span class="fileupload-preview">
                                                    
                                                </span>
                                            </div>
                                            <span class="btn btn-file">
                                                <span class="fileupload-new">
                                                    Select file
                                                </span>
                                                <span class="fileupload-exists">
                                                    Change
                                                </span>
                                                @Html.TextBoxFor(m => m.Attachment, new {  @name = "Attachment", @type = "file" })
                                                @Html.ValidationMessageFor(m=>m.Attachment)
                                                @*<input type="file" id="file" name="file" />*@
                                            </span>
                                            <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">
                                                Remove
                                            </a>
                                        </div>
                                        <a href="@Url.Action("Download", "Tender", new { @tenderid=Request.QueryString["tenderid"]})">Existing Attachment</a>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="form-actions">
                            <input type="reset" class="btn" value="Back" id="back" name="back">
                            <input type="submit" name="next" class="btn btn-primary" value="Submit">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<link href="~/Content/css/jquery-ui.structure.min.css" rel="stylesheet" />
<link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/css/jquery-ui.theme.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery-ui.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
